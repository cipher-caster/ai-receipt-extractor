generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Receipt {
  id         String        @id @default(uuid())
  imageUrl   String
  date       String?
  currency   String?
  vendorName String?
  gst        Float?
  total      Float?
  isSumValid Boolean     @default(false)
  items      ReceiptItem[]
  createdAt  DateTime      @default(now())
  updatedAt  DateTime      @updatedAt
}

model ReceiptItem {
  id        String  @id @default(uuid())
  name      String
  cost      Float
  receipt   Receipt @relation(fields: [receiptId], references: [id], onDelete: Cascade)
  receiptId String
}
